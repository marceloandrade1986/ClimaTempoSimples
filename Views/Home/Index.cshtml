@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>Clima tempo simples</h1>
</div>

<div class="container">
    <div>
        <div class="col-md-6">
            <ul class="list-group">
                <li class="list-group-item active">Cidades mais quentes hoje</li>
                <li class="list-group-item">Fortaleza - CE          Min 19º Max 38º</li>
                <li class="list-group-item">Rio de Janeiro  - RJ    Min 18º Max 37º</li>
            </ul>
        </div>

        <div class="col-md-6">

            <ul class="list-group">
                <li class="list-group-item active">Cidades mais frias hoje</li>
                <li class="list-group-item">Florianópols - SC       Min 5º Max 19º</li>
                <li class="list-group-item">Faxinal do Céu - PR     Min 5º Max 18º</li>
